#!/usr/bin/env bash
# This script installs and configures HAProxy to distribute traffic between web-01 and web-02 using the roundrobin algorithm.

# Update and install necessary packages
sudo apt-get update
sudo apt-get install -y haproxy

#backup
cp /etc/haproxy/haproxy.cfg /etc/haproxy/haproxy.cfg.bak
# Configure HAProxy

echo -e "\nfrontend http_front\n\tbind *:80\n\tstats uri /haproxy?stats\n\tdefault_backend http_back" >> /etc/haproxy/haproxy.cfg
echo -e "\nbackend http_back\n\tbalance roundrobin\n\tserver 492381-web-01 	54.237.210.6:80 check\n\tserver 492381-web-02 54.167.182.217:80 check" >> /etc/haproxy/haproxy.cfg

# Start HAProxy service
sudo service rsyslog restart
sudo service haproxy start
